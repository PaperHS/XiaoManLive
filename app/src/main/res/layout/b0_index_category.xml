<?xml version="1.0" encoding="utf-8"?>
<com.insthub.ecmobile.component.CategoryCell xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:layout_marginTop="1dp"
    android:divider="@drawable/divider"
    android:orientation="horizontal" >
    <LinearLayout
            android:id="@+id/category_btn1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center_horizontal"

        >
        <ImageView 
            android:id="@+id/category_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/b0_index_fruits"
            />
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="水果乐园"
            android:layout_below="@id/category_img"
            android:layout_centerInParent="true"
            />
    </LinearLayout>
    <LinearLayout
            android:id="@+id/category_btn2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        >
        <ImageView
            android:id="@+id/category_img2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/b0_index_vegetables"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="农贸市场"
            android:layout_below="@id/category_img2"
            android:layout_centerInParent="true"
            />
    </LinearLayout>
    <LinearLayout
            android:id="@+id/category_btn3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        >
        <ImageView
            android:id="@+id/category_img3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/b0_index_workshop"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="小满工坊"
            android:layout_below="@id/category_img3"
            android:layout_centerInParent="true"
            />
    </LinearLayout>
    <LinearLayout
            android:id="@+id/category_btn4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_weight="1" android:orientation="vertical"
        >
        <ImageView
            android:id="@+id/category_img4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/b0_index_supermarket"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="水果乐园"
            android:layout_below="@id/category_img4"
            android:layout_centerInParent="true"
            />
    </LinearLayout>

</com.insthub.ecmobile.component.CategoryCell>

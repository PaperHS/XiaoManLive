<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#f5f5f5"
    android:orientation="vertical" >

    <FrameLayout
        android:id="@+id/shop_car_item_view"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/shop_car_item_view1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <LinearLayout
                    android:id="@+id/shop_car_item_top_bar"
                    android:layout_width="match_parent"
                   android:layout_height="30dp"
                    android:gravity="center_vertical|left"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/shop_car_item_shop_icon"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_marginBottom="2dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="2dp"
                        android:background="#ff556677" />

                    <TextView
                        android:id="@+id/shop_car_item_shop_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="xx超市" />
                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.1dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="#c1c1c1" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="left"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/shop_car_item_image"
                        android:layout_width="60dp"
                        android:layout_height="80dp"
                        android:layout_margin="10dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/default_image" />

                    <LinearLayout
                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/shop_car_item_text"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:maxLines="2"
                            android:text="胡萝卜1斤"
                            android:textColor="#000000"
                            android:textSize="14dp" />

                        <TextView
                            android:id="@+id/shop_car_item_total"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:text="￥3.1"
                            android:textColor="#dd2222"
                            android:textSize="20dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="horizontal" >

                        <ImageView
                            android:id="@+id/shop_car_item_min"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:background="@drawable/btn_add_selector"
                            android:src="@drawable/ic_shopcart_minus" />

                        <EditText
                            android:id="@+id/shop_car_item_editNum"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:background="@color/white"
                            android:enabled="false"
                            android:gravity="center"
                            android:numeric="integer"
                            android:padding="3dp"
                            android:singleLine="true"
                            android:text="0" />

                        <ImageView
                            android:id="@+id/shop_car_item_sum"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:background="@drawable/btn_add_selector"
                            android:src="@drawable/ic_shopcart_add" />
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:layout_gravity="bottom"
                    android:background="@drawable/line" />
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>

</LinearLayout>
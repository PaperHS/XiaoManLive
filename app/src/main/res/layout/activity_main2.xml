<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.insthub.ecmobile.activity.Main2Activity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?android:actionBarSize"
        android:background="@color/main_color"
        >
    </android.support.v7.widget.Toolbar>
    <com.insthub.ecmobile.component.PagerSlidingTabStrip
        android:id="@+id/main_indicator"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        >
    </com.insthub.ecmobile.component.PagerSlidingTabStrip>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v4.view.ViewPager
            android:id="@+id/main_vierpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            ></android.support.v4.view.ViewPager>
        <TextView
            android:id="@+id/main_shopcart_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shopcart_bg"
            android:text="2"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginBottom="50dp"
            android:padding="10dp"
            android:gravity="center_vertical"
            android:drawablePadding="10dp"

            android:drawableLeft="@drawable/shopping_cart_acc_cart_icon"
            ></TextView>
    </RelativeLayout>
</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="@color/common_bg"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <RelativeLayout

            android:id="@+id/e4_share_weixin"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_height"
            android:background="@color/white"
            >
        <ImageView
                android:layout_marginLeft="@dimen/common_margin_leftright"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:src="@drawable/ic_share_weixin"
                />
        <TextView

                android:layout_marginLeft="60dp"
                style="@style/tvStyle.Common.mid"
                android:layout_height="match_parent"
                android:layout_width="wrap_content"
                android:textColor="@color/TextColorGray"
                android:text="微信"
                />
        <ImageView
                android:layout_marginRight="@dimen/common_margin_leftright"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_arrow_right"
                />
    </RelativeLayout>

    <RelativeLayout
            android:id="@+id/e0_share_friend"
            android:layout_marginTop="1dp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_height"
            android:background="@color/white"
            >
        <ImageView
                android:layout_marginLeft="@dimen/common_margin_leftright"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:src="@drawable/ic_share_friend"
                />
        <TextView
                android:layout_marginLeft="60dp"
                style="@style/tvStyle.Common.mid"
                android:layout_height="match_parent"
                android:layout_width="wrap_content"
                android:textColor="@color/TextColorGray"
                android:text="微信朋友圈"
                />
        <ImageView
                android:layout_marginRight="@dimen/common_margin_leftright"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_arrow_right"
                />
    </RelativeLayout>

    <RelativeLayout
            android:id="@+id/e0_share_weibo"
            android:layout_marginTop="1dp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_height"
            android:background="@color/white"
            >
        <ImageView
                android:layout_marginLeft="@dimen/common_margin_leftright"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:src="@drawable/ic_share_weibo"
                />
        <TextView
                android:layout_marginLeft="60dp"
                style="@style/tvStyle.Common.mid"
                android:layout_height="match_parent"
                android:layout_width="wrap_content"
                android:textColor="@color/TextColorGray"
                android:text="新浪微博"
                />
        <ImageView
                android:layout_marginRight="@dimen/common_margin_leftright"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_arrow_right"
                />
    </RelativeLayout>
</LinearLayout>
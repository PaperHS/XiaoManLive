<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:background="@color/common_bg"
              android:layout_height="match_parent">
    <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent"
            android:orientation="vertical"
            >
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white"
            android:paddingRight="@dimen/common_margin_leftright"
            android:paddingLeft="@dimen/common_margin_leftright"
            >
        <TextView android:layout_width="match_parent" android:layout_height="@dimen/item_height"
                style="@style/tvStyle.Common.mid"
                android:gravity="center_vertical|left"
                android:text="配送时间"
                />
        <View android:layout_width="match_parent" android:layout_height="1dp"
                android:background="@color/divider"
                ></View>
        <RelativeLayout
                android:id="@+id/checkout_ship_time"
                android:layout_width="match_parent" android:layout_height="@dimen/item_height"
                android:layout_gravity="center_vertical"
                >
        <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:src="@drawable/ic_checkout_clock"
                android:layout_centerVertical="true"
                android:id="@+id/checkout_time_icon"
                />
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:layout_toRightOf="@id/checkout_time_icon"
                android:layout_marginLeft="10dp"
                android:text="选择配送时间"
                android:layout_centerVertical="true"
                />
            <TextView
                    android:id="@+id/checkout_ship_time_str"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    style="@style/tvStyle.Common.mid"
                    android:textColor="@color/grey"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    />
            <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_arrow_right"
                    android:layout_alignParentRight="true"
                    />

        </RelativeLayout>

</LinearLayout>

    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:orientation="vertical"
                  android:background="@color/white"
                  android:layout_marginTop="15dp"
                  android:paddingRight="@dimen/common_margin_leftright"
                  android:paddingLeft="@dimen/common_margin_leftright"
            >
        <TextView android:layout_width="match_parent" android:layout_height="@dimen/item_height"
                  style="@style/tvStyle.Common.mid"
                  android:gravity="center_vertical|left"
                  android:text="优惠卷"
                />
        <View android:layout_width="match_parent" android:layout_height="1dp"
              android:background="@color/divider"
                ></View>
        <RelativeLayout
                android:id="@+id/checkout_promotion_layout"
                android:layout_width="match_parent" android:layout_height="@dimen/item_height"
                        android:layout_gravity="center_vertical"
                >
            <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
                       android:src="@drawable/ic_checkout_promotion"
                       android:layout_centerVertical="true"
                       android:id="@+id/checkout_promotion_icon"
                    />
            <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:layout_toRightOf="@id/checkout_promotion_icon"
                      android:layout_marginLeft="10dp"
                     android:orientation="vertical"
                      android:layout_centerVertical="true"
                    >
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:text="本单可以使用一张优惠卷"
                    />
             <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:text="已经使用一张优惠卷 节省了10元"
                    android:textColor="@color/text_red"
                    />
            </LinearLayout>
            <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
                       android:layout_centerVertical="true"
                       android:src="@drawable/ic_arrow_right"
                       android:layout_alignParentRight="true"
                    />

        </RelativeLayout>



    </LinearLayout>

    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:orientation="vertical"
                  android:background="@color/white"
                  android:layout_marginTop="15dp"
                  android:paddingRight="@dimen/common_margin_leftright"
                  android:paddingLeft="@dimen/common_margin_leftright"
            >
        <TextView android:layout_width="match_parent" android:layout_height="@dimen/item_height"
                  style="@style/tvStyle.Common.mid"
                  android:gravity="center_vertical|left"
                  android:text="结算"
                />
        <View android:layout_width="match_parent" android:layout_height="1dp"
              android:background="@color/divider"
                ></View>
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
            <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    >
                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >
                    <TextView android:layout_width="0dp" android:layout_height="wrap_content"
                              android:padding="5dp"
                              android:layout_weight="1"
                              android:text="商品金额"
                            />
                    <TextView
                            android:id="@+id/balance_goods_total"
                            android:layout_width="0dp" android:layout_height="wrap_content"
                              android:padding="5dp"
                              android:layout_weight="1"
                              android:text="￥0"
                              android:textColor="@color/text_red"
                            />
                </LinearLayout>
                <LinearLayout android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >
                    <TextView android:layout_width="0dp" android:layout_height="wrap_content"
                              android:padding="5dp"
                              android:layout_weight="1"
                              android:text="服务费"
                            />
                    <TextView
                            android:id="@+id/balance_fees"
                            android:layout_width="0dp"
                              android:layout_height="wrap_content"
                              android:padding="5dp"
                              android:layout_weight="1"
                              android:text="￥0"
                              android:textColor="@color/text_red"
                            />
                </LinearLayout>
                <LinearLayout android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >
                    <TextView android:layout_width="0dp" android:layout_height="wrap_content"
                              android:padding="5dp"
                              android:layout_weight="1"
                              android:text="优惠卷"
                            />
                    <TextView android:layout_width="0dp" android:layout_height="wrap_content"
                              android:padding="5dp"
                              android:id="@+id/balance_bonus"
                              android:layout_weight="1"
                              android:text="￥0"
                              android:textColor="@color/text_red"
                            />
                </LinearLayout>

            </LinearLayout>
            <View android:layout_width="2dp"
                  android:layout_height="match_parent"
                    android:background="@color/common_bg"
                    ></View>

            <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    >
                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                          android:text="订单总金额"/>
                <TextView
                        android:id="@+id/balance_total"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="￥140"
                        android:layout_marginTop="5dp"
                        android:textColor="@color/text_red"
                        />
            </LinearLayout>

        </LinearLayout>



    </LinearLayout>

    </LinearLayout>
    <Button android:layout_width="match_parent"
            android:layout_height="@dimen/item_height"
            android:layout_alignParentBottom="true"
            android:background="@drawable/btn_red"
            android:text="确认下单"
            android:textColor="@color/white"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginBottom="5dp"
            android:id="@+id/checkout_submit_btn"
            />
    <RelativeLayout
            android:id="@+id/checkout_pay_layout"
            android:layout_width="match_parent" android:layout_height="match_parent"
            android:background="@color/common_bg"
            android:visibility="gone"
            >
        <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent"
                android:orientation="vertical"
                >
            <RelativeLayout
                    android:layout_marginTop="1dp"
                    android:layout_width="match_parent"
                            android:gravity="center_vertical"
                            android:background="@color/white"
                            android:paddingLeft="@dimen/activity_horizontal_margin"
                            android:paddingRight="@dimen/activity_horizontal_margin"
                            android:layout_height="@dimen/item_height">
                <TextView
                        android:layout_width="wrap_content" android:layout_height="wrap_content"
                        style="@style/tvStyle.Common.mid"
                        android:text="总价"
                        android:layout_alignParentLeft="true"
                        />
                <TextView
                        android:id="@+id/pay_total_price"

                        android:layout_width="wrap_content" android:layout_height="wrap_content"
                        style="@style/tvStyle.Common.mid"
                        android:textColor="@color/text_red"
                        android:text="￥0"
                        android:layout_alignParentRight="true"
                        />
            </RelativeLayout>
             <RelativeLayout android:layout_width="match_parent"
                             android:layout_marginTop="1dp"
                            android:gravity="center_vertical"
                            android:background="@color/white"
                            android:paddingLeft="@dimen/activity_horizontal_margin"
                            android:paddingRight="@dimen/activity_horizontal_margin"
                            android:layout_height="@dimen/item_height">
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                        style="@style/tvStyle.Common.mid"
                        android:text="账户余额"
                        android:layout_alignParentLeft="true"
                        />
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                        style="@style/tvStyle.Common.mid"
                        android:textColor="@color/text_red"
                        android:text="￥0"
                        android:layout_alignParentRight="true"
                        />
            </RelativeLayout>
             <RelativeLayout android:layout_width="match_parent"
                             android:layout_marginTop="1dp"
                            android:gravity="center_vertical"
                            android:background="@color/white"
                            android:paddingLeft="@dimen/activity_horizontal_margin"
                            android:paddingRight="@dimen/activity_horizontal_margin"
                            android:layout_height="@dimen/item_height">
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                        style="@style/tvStyle.Common.mid"
                        android:text="还需支付"
                        android:layout_alignParentLeft="true"
                        />
                <TextView
                        android:id="@+id/pay_total_price_final"
                        android:layout_width="wrap_content" android:layout_height="wrap_content"
                        style="@style/tvStyle.Common.mid"
                        android:textColor="@color/text_red"
                        android:text="￥110"
                        android:layout_alignParentRight="true"
                        />
            </RelativeLayout>
            <TextView android:layout_width="match_parent"
                      android:layout_height="@dimen/item_height"
                      android:layout_marginTop="@dimen/activity_horizontal_margin"
                      android:text="选择支付方式"
                      android:background="@color/white"
                      style="@style/tvStyle.Common.mid"
                      android:gravity="center_vertical"
                      android:paddingLeft="@dimen/activity_horizontal_margin"
                    />
            <RelativeLayout android:layout_width="match_parent"
                            android:layout_marginTop="1dp"
                            android:gravity="center_vertical"
                            android:background="@color/white"
                            android:paddingLeft="@dimen/activity_horizontal_margin"
                            android:paddingRight="@dimen/activity_horizontal_margin"
                            android:layout_height="@dimen/item_height">
                <ImageView
                        android:id="@+id/payment_ali"
                        android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:src="@drawable/ic_payment_ali"
                        android:layout_centerVertical="true"
                        />
                <TextView
                        android:layout_toRightOf="@id/payment_ali"
                        android:layout_width="wrap_content" android:layout_height="match_parent"
                          style="@style/tvStyle.Common.mid"
                          android:text="支付宝支付"
                        android:layout_centerVertical="true"
                        />
                <ToggleButton android:layout_width="30dp" android:layout_height="30dp"
                        android:layout_alignParentRight="true"
                        android:textOff=" "
                        android:textOn=" "
                        android:checked="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/payment_checkbox_selector"
                        />
            </RelativeLayout>
            <RelativeLayout android:layout_width="match_parent"
                            android:layout_marginTop="1dp"
                            android:gravity="center_vertical"
                            android:background="@color/white"
                            android:paddingLeft="@dimen/activity_horizontal_margin"
                            android:paddingRight="@dimen/activity_horizontal_margin"
                            android:layout_height="@dimen/item_height">
                <ImageView
                        android:id="@+id/payment_tenent"
                        android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:src="@drawable/ic_payment_tenent"
                        android:layout_centerVertical="true"
                        />
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          style="@style/tvStyle.Common.mid"
                          android:text="微信支付"
                          android:layout_toRightOf="@id/payment_tenent"
                          android:layout_centerVertical="true"
                        />
                <ToggleButton android:layout_width="30dp" android:layout_height="30dp"
                              android:layout_alignParentRight="true"
                              android:textOff=" "
                              android:textOn=" "
                              android:layout_centerVertical="true"
                              android:background="@drawable/payment_checkbox_selector"
                        />
            </RelativeLayout>
            <RelativeLayout android:layout_width="match_parent"
                            android:layout_marginTop="1dp"
                            android:gravity="center_vertical"
                            android:background="@color/white"
                            android:paddingLeft="@dimen/activity_horizontal_margin"
                            android:paddingRight="@dimen/activity_horizontal_margin"
                            android:layout_height="@dimen/item_height">
                <ImageView
                        android:id="@+id/payment_paydelay"
                        android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:src="@drawable/ic_payment_tenent"
                        android:layout_centerVertical="true"
                        />
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          style="@style/tvStyle.Common.mid"
                          android:text="货到付款"
                          android:layout_toRightOf="@id/payment_paydelay"
                          android:layout_centerVertical="true"
                        />
                <ToggleButton android:layout_width="30dp" android:layout_height="30dp"
                              android:layout_alignParentRight="true"
                              android:textOff=" "
                              android:textOn=" "
                              android:layout_centerVertical="true"
                              android:background="@drawable/payment_checkbox_selector"
                        />
            </RelativeLayout>
        </LinearLayout>
        <Button
                android:id="@+id/checkout_take_order"
                android:layout_width="match_parent" android:layout_height="@dimen/item_height"
                android:layout_alignParentBottom="true"
                android:background="@drawable/btn_red"
                android:text="下单"
                android:textColor="@color/white"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_marginBottom="5dp"

                />


    </RelativeLayout>
</RelativeLayout>
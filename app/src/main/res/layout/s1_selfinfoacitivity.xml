<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toobar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        android:background="@color/main_color"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        ></android.support.v7.widget.Toolbar>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <Button
            android:id="@+id/selfinfo_login"
            android:text="一键登录"
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/btn_cyan"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            />

    </RelativeLayout>
    <View
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/grey"
        ></View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        >
        <LinearLayout
            android:id="@+id/selfinfo_address_man"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_selfinfo_address_man"
                android:layout_gravity="center_horizontal"
                />
            <TextView

                android:layout_marginTop="5dp"
            style="@style/tvStyle.Common.mid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="地址管理"
            android:textColor="@color/TextColorBlack"
            />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/selfinfo_myorder"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_selfinfo_myorder"
                android:layout_gravity="center_horizontal"
                />
            <TextView

                android:layout_marginTop="5dp"
            style="@style/tvStyle.Common.mid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="我的订单"
            android:textColor="@color/TextColorBlack"
            />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/selfinfo_papermoney"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingBottom="10dp"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_selfinfo_papermoney"
                android:layout_gravity="center_horizontal"
                />
            <TextView

                android:layout_marginTop="5dp"
            style="@style/tvStyle.Common.mid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="代金卷"
            android:textColor="@color/TextColorBlack"
            />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/selfinfo_msgcenter"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_selfinfo_msg_center"
                android:layout_gravity="center_horizontal"
                />
            <TextView

                android:layout_marginTop="5dp"
            style="@style/tvStyle.Common.mid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="消息中心"
            android:textColor="@color/TextColorBlack"
            />

        </LinearLayout>

    </LinearLayout>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/common_bg"
            android:textColor="@color/TextColorGray"
            android:text="钱包与充值"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:gravity="center_vertical"
            />
    <TextView
        android:id="@+id/selfinfo_wallet"
        android:drawableLeft="@drawable/ic_selfinfo_wallet"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="  钱包余额"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        />
        <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/grey"
        ></View>

    <TextView
        android:id="@+id/selfinfo_scan"
        android:drawableLeft="@drawable/ic_selfinfo_scan"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="  扫一扫"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/common_bg"
        android:orientation="horizontal"
        android:paddingTop="20dp"
        >
        <LinearLayout
            android:id="@+id/selfinfo_custom_server"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            >
            <ImageView
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_selfinfo_phone"
                />
            <TextView
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="客服中心"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/selfinfo_share"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            >
            <ImageView
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_selfinfo_share"
                />
            <TextView
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="分享给朋友"
                />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>